

<div class="card w-75 p-3 mx-auto" id="header">

    <h4>
    <div class="card-header"> Course List
        <a href="/course/addCourse/">
            <button  class="btn btn-primary bg-light text-success m-2">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Add
            </button>
        </a>
    </div>
    </h4>
    <div class="card-body">
        <div class="list-group">
            {{#if empty}}
                <p class="text-muted align-middle text-center">
                    No Course to display.
                </p>
            {{else}}
        {{#each course}}
            <div class ="row">
                <div class="col-md-10">
            <a href="/course/viewSectionLecture/{{_id}}" class="list-group-item list-group-item-action">
                <div class="d-flex justify-content-between">
                {{course_name}}
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                    </div>
            </a>
                </div>
               <div class="col-md-2">
                <a href="/course/editCourse/{{_id}}">
                    <button  class="btn btn-primary bg-success text-white m-2">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Edit
                    </button></a>
               </div>
            </div>
        {{/each}}
            {{/if}}
        </div>
    </div>
    <div class="card-footer w-100 text-muted d-flex justify-content-end">

        <a href="/">
            <button  class="btn btn-primary bg-success text-white m-2">
                <i class="fa fa-check" aria-hidden="true"></i>
                Back
            </button></a>
    </div>
</div>