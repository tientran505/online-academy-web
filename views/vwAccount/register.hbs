{{#section 'css'}}
  <link
    rel='stylesheet'
    href='https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css'
  />
{{/section}}

{{#section 'js'}}
  <script
    src='https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js'
  ></script>

  <script>
    $('#txtDOB').datetimepicker({timepicker: false, format: 'd/m/Y', mask:
    true});
  </script>
{{/section}}

<div class='card'>
  <h5 class='card-header text-center'>
    Registration Form
  </h5>
  <div class='card-body'>
    <form>
      <h5 class='p0'>Account Information</h5>
      <div class='form-group'>
        <label for='exampleInputEmail1'>Username</label>
        <input
          type='text'
          class='form-control'
          placeholder='Enter your username'
        />
      </div>

      <div class='form-group'>
        <label for='exampleInputPassword1'>Password</label>
        <input type='password' class='form-control' />
      </div>

      <div class='form-group'>
        <label for='exampleInputPassword1'>Confirm password</label>
        <input type='password' class='form-control' />
      </div>

      <h5 class='mt-5'>Personal Information</h5>
      <div class='form-group'>
        <label for='exampleInputEmail1'>Full name</label>
        <input
          type='text'
          class='form-control'
          placeholder='Enter your full name'
        />
      </div>

      <div class='form-group'>
        <label for='exampleInputEmail1'>Emaill address</label>
        <input
          type='email'
          class='form-control'
          id='exampleInputEmail1'
          aria-describedby='emailHelp'
          placeholder='Enter your email'
        />
      </div>

      <div class='form-group'>
        <label for='txtDOB'>Birthday</label>
        <input type='text' id='txtDOB' class='form-control' />
      </div>

      <button type='submit' class='btn btn-primary'>Submit</button>
    </form>
  </div>
</div>