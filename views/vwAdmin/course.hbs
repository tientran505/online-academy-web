<div class='container-fluid p-0 m-0'>
  <div class='row'>
    <div class='col-sm-3'>
      <div class='card'>
        <h3 class='card-header'>
          Admin Dashboard
        </h3>
        <div class='list-group list-group-flush'>
          <a href='/admin/user' class='list-group-item list-group-item-action'>
            <i class='fa fa-users mr-1' aria-hidden='true'></i>
            User
          </a>
          <a href='/admin/category' class='list-group-item list-group-item-action'>
            <i class='fa fa-list-alt mr-1' aria-hidden='true'></i>
            Category
          </a>
          <a href='/admin/course' class='list-group-item list-group-item-action active'>
            <i class='fa fa-graduation-cap mr-1' aria-hidden='true'></i>
            Course
          </a>
          <a href='#' class='list-group-item list-group-item-action'>
            <i class='fa fa-user-plus mr-1' aria-hidden='true'></i>
            Lecturer Account Approve
          </a>
        </div>
      </div>
    </div>

    <div class='col-sm-9'>
      <div class='card'>
        <h3 class='card-header'>
          User
        </h3>
        <div class='card-body container-fluid'>
          <table class='table table-bordered text-center table-hover'>
            <thead class="thead-light">
                <tr>
                    <th>
                      <div>
                      <button class="btn btn-outline-success border-0" type="button">
                          No
                      </button>
                      </div>
                    </th>
                    <th>
                      <div class="dropdown">
                      <button class="btn btn-outline-success dropdown-toggle border-0" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          Name
                      </button>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                          <a class="dropdown-item" type="sumit" role="button" href="/admin/course/orderName?orderName=A-Z">A-Z</a>
                          <a class="dropdown-item" type="sumit" role="button" href="/admin/course/orderName?orderName=Z-A">Z-A</a>
                      </div>
                      </div>
                    </th>
                    <th>
                      <div class="dropdown">
                          <button class="btn btn-outline-success dropdown-toggle border-0" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Category
                          </button>
                          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                              {{#each cates}}
                              <a class="dropdown-item" type="button" href="/admin/course/category?cateID={{_id}}" type="sumit" role="button">{{title}}</a>
                              {{/each}}
                          </div>
                      </div>
                    </th>
                    <th>
                      <div>
                          <a class="btn btn-outline-success border-0">
                              Price
                          </a>
                      </div>
                    </th>
                    <th>
                      <div>
                          <a class="btn btn-outline-success border-0">
                              Rate
                          </a>
                      </div>
                    </th>
                    <th>
                      <div class="dropdown">
                          <button class="btn btn-outline-success dropdown-toggle border-0" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Author
                          </button>
                          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                              <a class="dropdown-item" type="button" href="/admin/course/orderAuthor?orderAuthor=A-Z" type="sumit" role="button">A-Z</a>
                              <a class="dropdown-item" type="button" href="/admin/course/orderAuthor?orderAuthor=Z-A" type="sumit" role="button">Z-A</a>
                          </div>
                      </div>
                    </th>
                    <th>
                      <div>
                        <a class="btn btn-outline-success border-0">
                            Action
                        </a>
                      </div>
                    </th>
                </tr>
            </thead>
            <tbody>
              {{#each courses}}
              <tr>
                <th scope='row'>{{inc @index}}</th>
                <td>{{course_name}}</td>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td>{{rate}}</td>
                <td>{{authors}}</td>
                <td>
                  <form method="post">
                    <button class="btn btn-outline-success" name="txtDisable" value="{{_id}}+{{#if disable}}false{{else}}true{{/if}}" formaction="/admin/course/disable" type="sumit" role="button">{{#if disable}}Enable{{else}}Disable{{/if}}</button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>

</div>