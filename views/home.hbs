          {{#each viewlist}}
          <div class="carousel-item {{#if isActive}}active{{/if}}">
          {{#each subviewlist}}
            <div class="cards-wrapper">
              {{#each item}}
              <div class="card" style="width: 18rem;">
                <img src="./public/imgs/{{_id}}.png" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title">{{course_name}}</h5>
                  <div class="">
                    <div class="stars">
                      <a class="card-text text-dark text-decoration-none">
                        <b class="font-weight-bold">{{rate}}</b>
                        <small> 
                          <i class="fa fa-star" style="color: gold" id="rate" aria-hidden="true"></i>
                        </small>
                      </a>
                    </div>
                    <b class="font-weight-bold">₫ <del>{{format_number price}}</del> {{format_number sale}}</b>
                  </div>
                </div>
                <div class="card-footer"><a href="/detail/{{_id}}" class="btn btn-primary">View course</a> </div>
              </div>
              {{/each}}
            </div>
          {{/each}}
          </div>
          {{/each}}
        </div>
        <button class="carousel-control-prev" type="button" data-target="#top10View{{id}}" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
