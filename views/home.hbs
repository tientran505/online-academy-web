<script>
  const generateTopCoursesCarouselItem = (criteria, isActive) => {
      let image = './public/imgs/image.png';
      let title = 'Top 1 hltv';
      let description = 'Description';
      let link = '#';

      let carouselItem = '';

      if (isActive == true)
        carouselItem = '<div class="carousel-item active carousel-item-spotlight">';
      else carouselItem = '<div class="carousel-item carousel-item-spotlight">';

      carouselItem +=
        '<div class="overlay-image" style="background-image: url(' +
        image +
        ')"></div>' +
        '<div class="container">' +
        '<h1>' +
        title +
        '</h1>' +
        '<p>' +
        description +
        '</p>' +
        '<a href="' +
        link +
        '" class="btn btn-lg btn-primary">Sign up</a>' +
        '</div>';
      carouselItem += '</div>';

      return carouselItem;
    };
  const generateTopCoursesCarousel = (carouselName) => {
      let carousel = '';

      carousel +=
        '<div id="' +
        carouselName +
        '" class="carousel slide" data-ride="carousel">';
      carousel +=
        '<ol class="carousel-indicators">' +
        '<li data-target="#' +
        carouselName +
        '" data-slide-to="0" class="active"></li>' +
        '<li data-target="#' +
        carouselName +
        '" data-slide-to="1"></li>' +
        '<li data-target="#' +
        carouselName +
        '" data-slide-to="2"></li> </ol>';
      carousel += '<div class="carousel-inner">';
      carousel += generateTopCoursesCarouselItem('', true);
      carousel += generateTopCoursesCarouselItem('', false);
      carousel += generateTopCoursesCarouselItem('', false);
      carousel += '</div>';
      carousel +=
        '<a href="#' +
        carouselName +
        '" class="carousel-control-prev" role="button" data-slide="prev">' +
        '<span class="carousel-control-prev-icon" aria-hidden="true"></span>' +
        '</a>' +
        '<a href="#' +
        carouselName +
        '" class="carousel-control-next" role="button" data-slide="next">' +
        '<span class="carousel-control-next-icon" aria-hidden="true"></span>' +
        '</a>';
      carousel += '</div></div>';
      return carousel;
    };
</script>

