{{#section 'css'}}
  <style>
    .home-layout {
        margin-left: 4rem;
        margin-right: 4rem;
    }
    .carousel-item-spotlight {
      height: 32rem;
      background: #000;
      color: white;
      position: relative;
    }
    .container {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding-bottom: 50px;
    }
    .overlay-image {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      top: 0;
      background-position: center;
      background-size: cover;
      opacity: 0.8;
    }
  </style>
  <style>
    .cards-wrapper {
      display: flex;
      justify-content: center;
    }
    .card img {
      max-width: 100%;
      height: 180px;
    }
    .card {
      height: 400px;
      margin-left: auto;
      margin-right: auto;
    }
    button.carousel-control-prev,
    button.carousel-control-next {
      background-color: rgb(0, 45, 0);
      width: 6vh;
      height: 6vh;
      border-radius: 50%;
      top: 50%;
      transform: translateY(-50%);
    }
    .cate {
      margin-left: auto;
      margin-right: auto;
      border: 1px solid lightgreen;
    }
  </style>
{{/section}}

{{#section 'js'}} 
{{/section}}

  <div class="mx-5">
    <div id="spotlightCourses" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#spotlightCourses" data-slide-to="0" class="active"></li>
        <li data-target="#spotlightCourses" data-slide-to="1" class=""></li>
        <li data-target="#spotlightCourses" data-slide-to="2" class=""></li> 
      </ol>
      <div class="carousel-inner">
        {{#each spotlightlist}}
          {{#if isActive}}
          <div class="carousel-item carousel-item-spotlight active">
          {{else}}
          <div class="carousel-item carousel-item-spotlight">
          {{/if}}
            <div class="overlay-image" style="background-image: url(./public/imgs/{{_id}}.png)">
            </div>
            <div class="container">
              <h1>{{course_name}}</h1>
              <p>{{brief_description}}</p>
              <div class="stars mb-3">
                <a class="card-text text-dark text-decoration-none">
                  <b class="font-weight-bold" style="color: white">{{rate}}</b>
                  <small> 
                    <i class="fa fa-star" style="color: gold" id="rate" aria-hidden="true"></i>
                  </small>
                </a>
              </div>
              <a href="/detail/{{_id}}" class="btn btn-lg btn-primary">Sign up</a>
            </div>
          </div>
        {{/each}}
      </div>  
      <a href="#spotlightCourses" class="carousel-control-prev" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      </a>
      <a href="#spotlightCourses" class="carousel-control-next" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
      </a>
    </div>
  </div>
  
{{#each biglist}}
  <br>
  <hr  width="85%" size="3px" align="center" color="lightgreen" />
  <br>
  <div class="mx-5">
  <div class="d-flex justify-content-center"><h1>{{title}}</h1></div>
  {{#if viewempty}} 
